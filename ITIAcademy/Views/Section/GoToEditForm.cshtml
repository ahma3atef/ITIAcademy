@model Section
<form asp-action="SaveEditFormData" asp-controller="Section">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Id">Id</label>
            <input type="number" class="form-control" asp-for="Id" placeholder="Id" value="@Model.Id">
            <span asp-validation-for="Id" class="text-danger"></span>

        </div>
        <div class="form-group col-md-6">
            <label asp-for="SectionName">Section Name</label>
            <input type="text" class="form-control" asp-for="SectionName" placeholder="Name" value="@Model.SectionName">
            <span asp-validation-for="SectionName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Section" class="form-label">Course Name</label>
            <br /><br />
            <select id="Section" name="CourseId" class="form-select">
                @foreach (Course item in ViewBag.Courses)
                {
                    <option value="@item.Id" selected>@item.CourseName</option>
                }
            </select>
        </div>
        <div class="mb-3">
            <label for="Section" class="form-label">Schedule Title</label>
            <br /><br />
            <select id="Section" name="ScheduleId" class="form-select">
                @foreach (Schedule item in ViewBag.Schedules)
                {
                    <option value="@item.Id" selected>@item.Title</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="Section" class="form-label">Instructor Name</label>
            <br /><br />
            <select id="Section" name="InstructorId" class="form-select">
                @foreach (Instructor item in ViewBag.Instructors)
                {
                    <option value="@item.Id" selected>@item.FName &nbsp @item.LName</option>
                }
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

