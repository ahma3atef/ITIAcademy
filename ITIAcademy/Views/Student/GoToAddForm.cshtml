<form action="/Student/SaveFormData">
    <div class="form-row">
        <div class="form-group col-md-6">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Id</label>
                <input type="number" class="form-control" name="Id" id="Id" placeholder="Id">
            </div>

            <div class="form-group col-md-6">
                <label for="inputEmail4">FirstName</label>
                <input type="text" class="form-control" name="FName" id="FName" placeholder="FName">
            </div>

            <div class="form-group col-md-6">
                <label for="inputEmail4">LastName</label>
                <input type="text" class="form-control" name="LName" id="Lame" placeholder="LName">
            </div>
            <div class="mb-3">
                <label for="Student" class="form-label">Section Name</label>
                <br/>
                <select id="Student" name="SectionId" class="form-select">
                    @foreach (Section item in ViewBag.Sections)
                    {
                        <option value="@item.Id" selected>@item.SectionName</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>